<html>
<head>
<title>Railfrog</title>
  <script type="text/javascript">
    _editor_url  = "/plugin_assets/railfrog/xinha/"  // (preferably absolute) URL (including trailing slash) where Xinha is installed
    _editor_lang = "en";      // And the language we need to use in the editor.
  </script>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "/plugin_assets/railfrog/xinha/XinhaCore.js" %>
  <%= javascript_include_tag "xinha_config", :plugin => "railfrog" %>

<%= javascript_include_tag "/plugin_assets/railfrog/javascripts/tabs/object.js" %> 
<%= javascript_include_tag "/plugin_assets/railfrog/javascripts/tabs/control.js" %> 



<!--[if lte IE 6]>
