<div id="content">
  <div id="tools">
    <%= render :partial => 'explore_block_folders', :locals => { :folder => @folder } %>

    <% if @site_mapping.folder? %>
      <%= render :partial => 'explore_block_folder_summary', :locals => { :folder => @site_mapping } %>
    <% else %>
      <%= render :partial => 'explore_block_chunk_summary', :locals => { :chunk => @site_mapping,
                                                                         :chunk_version => @chunk_versions[0] } %>
    <% end %>

    <%= render :partial => 'explore_block_labels', :locals => { :site_mapping => @site_mapping } %>
    <%= render :partial => 'explore_block_tags', :locals => { :site_mapping => @site_mapping } %>
    <%= render :partial => 'explore_block_upload_file', :locals => { :site_mapping => @site_mapping } %>
  </div>

  <div id="content-main">
    <% if @site_mapping.folder? %>
      <%= render :partial => 'explore_block_html', :locals => { :site_mapping => @site_mapping } %>
      <%= render :partial => 'explore_block_media', :locals => { :site_mapping => @site_mapping } %>
    <% else %>
      <%= render :partial => 'explore_block_chunk_versions', :locals => { :chunk => @chunk,
                                                                          :chunk_versions => @chunk_versions,
                                                                          :site_mapping => @site_mapping } %>
      <%# hide the versions block by default %>
      <%#= hide_block 'chunk-versions' %>
      <%= render :partial => 'explore_block_chunk', :locals => { :site_mapping => @site_mapping,
                                                                 :full_path => @full_path,
                                                                 :chunk => @chunk,
                                                                 :mime_type => @mime_type,
                                                                 :chunk_version => @chunk_versions[0],
                                                                 :chunk_versions => @chunk_versions } %>
    <% end %>
  </div>
</div>